<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MenagerLekow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:z="clr-namespace:MenagerLekow.MVVM.VIEW"
    xmlns:local="clr-namespace:MenagerLekow"
    Title="MenagerLekow"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate z:StronaGlowna}"
        Route="MainPage" />
    <Shell.FlyoutContent>
        <VerticalStackLayout>
            <HorizontalStackLayout Margin="10">
                <Image Source="dotnet_bot.png" HeightRequest="50" WidthRequest="50"/>
                <Button BackgroundColor="Red" Text="Strona główna" Clicked="Button_Clicked"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Margin="10">
                <Image Source="dotnet_bot.png" HeightRequest="50" WidthRequest="50"/>
                <Button BackgroundColor="Green" Text="Dodaj Leki" Clicked="Button_Clicked_1"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Margin="10">
                <Image Source="dotnet_bot.png" HeightRequest="50" WidthRequest="50"/>
                <Button BackgroundColor="Pink" Text="Ustawienia"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Margin="10">
                <Image Source="dotnet_bot.png" HeightRequest="50" WidthRequest="50"/>
                <Button BackgroundColor="Blue" Text="Polityka prywatności"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Margin="10">
            <Image Source="dotnet_bot.png" HeightRequest="50" WidthRequest="50"/>
            <Button BackgroundColor="Blue" Text="Pomoc"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Shell.FlyoutContent>

</Shell>
